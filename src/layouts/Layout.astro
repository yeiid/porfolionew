---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import LanguageToggle from '../components/LanguageToggle.svelte';
import ThemeToggle from '../components/ThemeToggle.svelte';
import '../styles/global.css';

export interface Props {
	title: string;
}

const { title } = Astro.props;

---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Portafolio de Yeifran Hernandez - Desarrollador Frontend especializado en React, Node.js y tecnologías web modernas. Proyectos innovadores y soluciones digitales.">
  <meta name="keywords" content="desarrollador web, frontend, React, Node.js, JavaScript, Python, portafolio, Yeifran Hernandez">
  <meta name="author" content="Yeifran Hernandez">
  <meta name="robots" content="index, follow">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <title>Yeifran Hernandez - Desarrollador Frontend</title>
  <link rel="stylesheet" href="/src/styles/global.css">
</head>
<body id="top">
  <a href="#main-content" class="skip-link">Saltar al contenido principal</a>
  <Header />
  <ThemeToggle client:load />
  
  <main class="main-content" id="main-content">
    <div class="container">
      <slot />
    </div>
  </main>
  
  <Footer />
  
  <!-- Fixed language toggle at bottom of page -->
  <LanguageToggle client:load />

  <script>
    // Theme initialization (mejorado)
    (function() {
      const savedTheme = localStorage.getItem('theme') || 'light';
      document.documentElement.setAttribute('data-theme', savedTheme);
      
      // Actualizar el toggle si existe
      const themeToggle = document.querySelector('ThemeToggle');
      if(themeToggle) {
        themeToggle.setAttribute('theme', savedTheme);
      }
    })();
  </script>
</body>
</html>

<style>
  .main-content {
    padding-top: var(--header-height); /* Previene solapamiento con header fijo */
    min-height: calc(100vh - var(--header-height));
  }
  /* Mejoras en la transición de temas */
  * {
    transition: background-color 0.3s ease, color 0.3s ease;
  }
  /* Ajustes de color para mejor contraste */
  [data-theme="light"] {
    --bg: #f8fafc; /* Color más neutro que el rosa */
    --text: #0f172a;
    --primary: #2563eb; /* Azul más profesional */
    --secondary: #7c3aed;
    --accent: #059669;
  }

  [data-theme="dark"] {
    --bg: #0f172a;
    --text: #f8fafc;
    --primary: #818cf8;
    --secondary: #a855f7;
    --accent: #34d399;
  }

  /* Mejoras en la tipografía */
  body {
    font-family: 'Inter', system-ui, sans-serif;
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
  }

  /* Ajustes responsivos */
  @media (max-width: 768px) {
    section {
      padding: 4rem 0;
      min-height: auto;
    }
  }
</style>