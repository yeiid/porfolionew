---
interface Project {
  title: string;
  image: string;
  description: string;
  link: string;
}

const projects: Project[] = [
  {
    title: "Proyecto 1",
    image: "/src/assets/ecoraices-web.png",
    description: "Descripción breve del Proyecto 1.",
    link: "https://ejemplo.com/proyecto1"
  },
  {
    title: "Proyecto 2",
    image: "/src/assets/jamuche.png",
    description: "Descripción breve del Proyecto 2.",
    link: "https://ejemplo.com/proyecto2"
  },
  {
    title: "Proyecto 3",
    image: "/src/assets/encriptardor.png",
    description: "Descripción breve del Proyecto 3.",
    link: "https://ejemplo.com/proyecto3"
  }
];
---

<section id="projects" class="projects-section">
  <h2 class="section-title">Proyectos</h2>
  <div class="projects-grid">
    {projects.map((project) => (
      <article class="project-card">
        <header class="project-header">
          <h3 class="project-title">{project.title}</h3>
        </header>
        <figure class="project-image">
          <img 
            src={project.image} 
            alt={`Vista previa del proyecto ${project.title}`} 
            loading="lazy" 
          />
        </figure>
        <div class="project-content">
          <p class="project-description">{project.description}</p>
          <a 
            href={project.link} 
            class="project-link" 
            target="_blank" 
            rel="noopener noreferrer"
          >
            Ver proyecto
          </a>
        </div>
      </article>
    ))}
  </div>
</section>

<style>
  .projects-section {
    padding: 4rem 0;
  }

  .section-title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    background: linear-gradient(to right, var(--primary), var(--secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    padding: 0 1rem;
  }

  .project-card {
    background: var(--bg);
    border: 1px solid rgba(var(--primary-rgb), 0.1);
    border-radius: 16px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1), box-shadow 0.3s ease-in-out;
  }

  .project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(var(--primary-rgb), 0.2);
  }

  .project-header {
    padding: 1rem;
  }

  .project-title {
    margin: 0;
    font-size: 1.75rem;
    color: var(--primary);
  }

  .project-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .project-content {
    padding: 1rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .project-description {
    margin-bottom: 1rem;
    color: var(--text);
    line-height: 1.6;
  }

  .project-link {
    margin-top: auto;
    text-decoration: none;
    color: var(--secondary);
    font-weight: bold;
    transition: color 0.3s ease;
  }

  .project-link:hover,
  .project-link:focus {
    color: var(--primary);
  }
</style>
