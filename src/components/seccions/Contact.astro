<style>
  .contact-section {
    position: relative;
    padding: 8rem 0;
    background: var(--bg);
    overflow: hidden;
  }

  /* Background Blobs */
  .background-blobs {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 0;
    pointer-events: none;
  }

  .blob {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.3;
  }

  .blob-1 {
    top: 20%;
    left: -10%;
    width: 40vw;
    height: 40vw;
    background: var(--primary);
    animation: float 15s infinite alternate;
  }

  .blob-2 {
    bottom: -10%;
    right: -10%;
    width: 50vw;
    height: 50vw;
    background: var(--secondary, #64ffda);
    animation: float 20s infinite alternate-reverse;
  }

  @keyframes float {
    0% {
      transform: translate(0, 0);
    }
    100% {
      transform: translate(30px, 50px);
    }
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    position: relative;
    z-index: 1;
  }

  .section-header {
    text-align: center;
    margin-bottom: 5rem;
  }

  .section-title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    margin-bottom: 1rem;
    background: linear-gradient(
      135deg,
      var(--primary),
      var(--secondary, #64ffda)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-weight: 800;
    letter-spacing: -0.02em;
  }

  .section-subtitle {
    font-size: 1.25rem;
    color: var(--text);
    opacity: 0.7;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 4rem;
    align-items: start;
  }

  .contact-info-wrapper {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .info-card {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 1.5rem;
    background: rgba(var(--bg), 0.6);
    backdrop-filter: blur(10px);
    border-radius: 16px;
    border: 1px solid rgba(var(--text), 0.05);
    transition: all 0.3s ease;
  }

  .info-card:hover {
    transform: translateY(-5px);
    border-color: var(--primary);
    box-shadow: 0 10px 30px -10px rgba(var(--primary), 0.1);
  }

  .icon-wrapper {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(var(--primary), 0.1);
    border-radius: 12px;
    font-size: 1.5rem;
    transition: transform 0.3s ease;
  }

  .info-card:hover .icon-wrapper {
    transform: scale(1.1) rotate(5deg);
  }

  .info-text h3 {
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text);
    opacity: 0.6;
    margin-bottom: 0.25rem;
  }

  .info-text p,
  .info-text .link {
    color: var(--text);
    font-size: 1.1rem;
    font-weight: 500;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .info-text .link:hover {
    color: var(--primary);
  }

  .social-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.5rem;
    background: rgba(var(--bg), 0.6);
    border: 1px solid rgba(var(--text), 0.1);
    border-radius: 12px;
    color: var(--text);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background: var(--primary);
    color: white;
    transform: translateY(-3px);
    border-color: var(--primary);
    box-shadow: 0 10px 20px -10px rgba(var(--primary), 0.3);
  }

  @media (max-width: 968px) {
    .contact-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .contact-info-wrapper {
      order: 2;
    }

    .contact-form-wrapper {
      order: 1;
    }
  }

  @media (max-width: 640px) {
    .contact-section {
      padding: 4rem 0;
    }

    .section-title {
      font-size: 2rem;
    }

    .info-card {
      padding: 1.25rem;
    }

    .social-links {
      flex-direction: column;
    }

    .social-link {
      justify-content: center;
    }
  }
</style>
