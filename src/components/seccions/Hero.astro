---
import TranslatedText from '../TranslatedText.svelte';
---

<section id="hero" class="hero">
  <div class="container">
    <h1 class="hero-title">
      <span class="typing-text">
        <TranslatedText key="heroTitle" fallback="Frontend Developer" client:load />
      </span>
    </h1>
    <p class="hero-subtitle">
      <TranslatedText key="heroSubtitle" fallback="Hi, I'm Yeifran Hernandez" client:load />
    </p>
  </div>
</section>

<style>

  .hero {
    position: relative;
    padding: 8rem 1rem;
    text-align: center;
    overflow: hidden;
    background: var(--bg);
    color: var(--text);
  }
  
  /* Fondo animado basado en las variables del tema */
  .hero::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 300%;
    height: 100%;
    background: linear-gradient(45deg, var(--primary), var(--secondary), var(--accent));
    opacity: 0.4;
    animation: slide 15s linear infinite;
    z-index: -1;
  }
  
  @keyframes slide {
    0% { transform: translateX(0%); filter: hue-rotate(0deg); }
    100% { transform: translateX(33.33%); filter: hue-rotate(360deg); }
  }
  
  /* Contenedor para centrar y limitar el contenido */
  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 1;
  }
  
  /* Título principal con animación de escritura */
  .hero-title {
    font-size: 4rem;
    font-weight: 700;
    margin-bottom: 1rem;
    text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
    overflow: hidden;
    white-space: nowrap;
  }
  
  .hero-title:hover {
    transform: scale(1.05);
  }
  
  .typing-text {
    border-right: 2px solid var(--primary);
    animation: typing 4s steps(18) 0s both, blink 0.75s infinite;
  }
  
  @keyframes typing {
    from {
      width: 0;
    }
    to {
      width: 100%;
    }
  }
  
  @keyframes blink {
    50% {
      border-color: transparent;
    }
  }
  
  /* Subtítulo */
  .hero-subtitle {
    font-size: 1.5rem;
    margin-top: 1rem;
    color: var(--text);
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .hero-title {
      font-size: 3rem;
    }
    .hero-subtitle {
      font-size: 1.2rem;
    }
  }
</style>
