---
import TranslatedText from "./TranslatedText.svelte";
import BackToTop from "./BackToTop.svelte";
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-section">
        <h3 class="footer-title">
          <TranslatedText key="explore" fallback="Explore" client:load />
        </h3>
        <nav class="footer-nav">
          <a href="#about" class="footer-link">
            <TranslatedText key="navAbout" fallback="About" client:load />
          </a>
          <a href="#services" class="footer-link">
            <TranslatedText key="navServices" fallback="Services" client:load />
          </a>
          <a href="#projects" class="footer-link">
            <TranslatedText key="navProjects" fallback="Projects" client:load />
          </a>
          <a href="#contact" class="footer-link">
            <TranslatedText key="navContact" fallback="Contact" client:load />
          </a>
        </nav>
      </div>
      <div class="footer-section">
        <h3 class="footer-title">
          <TranslatedText
            key="technologies"
            fallback="Technologies"
            client:load
          />
        </h3>
        <div class="tech-list">
          <span class="tech-item">AI/ML</span>
          <span class="tech-item">React</span>
          <span class="tech-item">Python</span>
          <span class="tech-item">Node.js</span>
          <span class="tech-item">Astro</span>
          <span class="tech-item">Svelte</span>
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <p class="copyright">
        Â© {currentYear}
        <TranslatedText
          key="copyright"
          fallback="Yeifran Hernandez. All rights reserved."
          client:load
        />
      </p>
      <BackToTop client:load />
    </div>
  </div>
</footer>

<style>
  .footer {
    background: rgba(var(--bg), 0.8);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-top: 1px solid rgba(var(--text), 0.05);
    padding: 4rem 0 2rem;
    margin-top: auto;
    position: relative;
    z-index: 10;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .footer-section {
    padding: 1rem 0;
  }

  .footer-title {
    color: var(--primary);
    font-size: 1.2rem;
    margin-bottom: 1.5rem;
    position: relative;
    padding-bottom: 0.5rem;
    display: inline-block;
  }

  .footer-title::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 40px;
    height: 2px;
    background: var(--secondary);
    border-radius: 2px;
  }

  .footer-nav {
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
  }

  .footer-link {
    color: var(--text);
    text-decoration: none;
    transition: all 0.3s ease;
    opacity: 0.8;
    width: fit-content;
  }

  .footer-link:hover {
    color: var(--primary);
    opacity: 1;
    transform: translateX(5px);
  }

  .tech-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .tech-item {
    background: rgba(var(--primary), 0.1);
    color: var(--primary);
    padding: 0.4rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 500;
    border: 1px solid rgba(var(--primary), 0.2);
    transition: all 0.3s ease;
  }

  .tech-item:hover {
    background: var(--primary);
    color: white;
    transform: translateY(-2px);
  }

  .footer-bottom {
    border-top: 1px solid rgba(var(--text), 0.1);
    padding-top: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .copyright {
    color: var(--text);
    opacity: 0.7;
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>
