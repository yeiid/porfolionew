---
// src/components/Footer.astro
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-section">
        <h3 class="footer-title">Explora</h3>
        <nav class="footer-nav">
          <a href="#about" class="footer-link">Sobre mí</a>
          <a href="#services" class="footer-link">Servicios</a>
          <a href="#projects" class="footer-link">Proyectos</a>
          <a href="#contact" class="footer-link">Contacto</a>
        </nav>
      </div>
      <div class="footer-section">
        <h3 class="footer-title">Tecnologías</h3>
        <div class="tech-list">
          <span class="tech-item">AI/ML</span>
          <span class="tech-item">React</span>
          <span class="tech-item">Python</span>
          <span class="tech-item">Node.js</span>
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <p class="copyright">© {currentYear} Yeifran Hernandez. Todos los derechos reservados.</p>
      <a href="#top" class="back-to-top">↑</a>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--bg);
    border-top: 1px solid rgba(var(--primary), 0.1);
    padding: 4rem 0 2rem;
    margin-top: auto;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .footer-section {
    padding: 1rem;
  }

  .footer-title {
    color: var(--primary);
    font-size: 1.2rem;
    margin-bottom: 1.5rem;
    position: relative;
    padding-bottom: 0.5rem;
  }

  .footer-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 40px;
    height: 2px;
    background: var(--secondary);
  }

  .footer-nav {
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
  }

  .footer-link {
    color: var(--text);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-link:hover {
    color: var(--primary);
  }

  .social-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text);
    text-decoration: none;
    transition: transform 0.3s ease;
  }

  .social-icon {
    font-size: 1.2rem;
    transition: transform 0.3s ease;
  }

  .social-link:hover .social-icon {
    transform: rotate(15deg) scale(1.1);
  }

  .tech-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-item {
    background: rgba(var(--primary), 0.1);
    color: var(--primary);
    padding: 0.3rem 0.8rem;
    border-radius: 20px;
    font-size: 0.9rem;
  }

  .footer-bottom {
    border-top: 1px solid rgba(var(--primary), 0.1);
    padding-top: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .copyright {
    color: var(--text);
    opacity: 0.8;
    font-size: 0.9rem;
  }

  .back-to-top {
    color: var(--primary);
    text-decoration: none;
    font-size: 1.5rem;
    padding: 0.5rem;
    transition: transform 0.3s ease;
  }

  .back-to-top:hover {
    transform: translateY(-3px);
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-section {
      padding: 0;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>